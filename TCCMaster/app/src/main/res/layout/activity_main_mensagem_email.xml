<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_mensagemEmail_nome_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="id"/>

        <EditText
            android:id="@+id/et_mensagemEmail_texto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Texto"/>
        <EditText
            android:id="@+id/et_mensagemEmail_tempo_para_enviar_primeiro_alerta"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_texto"
            android:layout_marginTop="8dp"
            android:hint="Tempo Alerta"/>
        <EditText
            android:id="@+id/et_mensagemEmail_intervalo_de_tempo_mensagem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_tempo_para_enviar_primeiro_alerta"
            android:layout_marginTop="8dp"
            android:hint="Intervalo"/>
        <EditText
            android:id="@+id/et_mensagemEmail_tipo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_intervalo_de_tempo_mensagem"
            android:layout_marginTop="8dp"
            android:hint="Tipo"/>
        <EditText
            android:id="@+id/et_mensagemEmail_data"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_tipo"
            android:layout_marginTop="8dp"
            android:hint="Data"/>
        <EditText
            android:id="@+id/et_mensagemEmail_horario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_data"
            android:layout_marginTop="8dp"
            android:hint="Horário"/>
        <EditText
            android:id="@+id/et_mensagemEmail_latitude"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_horario"
            android:layout_marginTop="8dp"
            android:hint="Latitude"/>
        <EditText
            android:id="@+id/et_mensagemEmail_numero_longitude"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_latitude"
            android:layout_marginTop="8dp"
            android:hint="Longitude"/>
        <EditText
            android:id="@+id/et_mensagemEmail_origem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_numero_longitude"
            android:layout_marginTop="8dp"
            android:hint="Origem"/>

        <EditText
            android:id="@+id/et_mensagemEmail_destino"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_origem"
            android:layout_marginTop="8dp"
            android:hint="Destino"/>
        <EditText
            android:id="@+id/et_mensagemEmail_email_destino"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_destino"
            android:layout_marginTop="8dp"
            android:hint="Destinatário"/>

        <EditText
            android:id="@+id/et_mensagemEmail_from_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_email_destino"
            android:layout_marginTop="8dp"
            android:hint="De"/>
        <EditText
            android:id="@+id/et_mensagemEmail_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_from_email"
            android:layout_marginTop="8dp"
            android:hint="Senha"/>

        <EditText
            android:id="@+id/et_mensagemEmail_assunto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_password"
            android:layout_marginTop="8dp"
            android:hint="Assunto"/>
        <EditText
            android:id="@+id/et_mensagemEmail_email_host"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_assunto"
            android:layout_marginTop="8dp"
            android:hint="Host"/>

        <EditText
            android:id="@+id/et_mensagemEmail_email_port"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_email_host"
            android:layout_marginTop="8dp"
            android:hint="Port"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_mensagemEmail_email_port"
            android:text="add"
            android:id="@+id/send_btn_email"
            android:layout_marginTop="8dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_btn_email"
            android:layout_marginTop="8dp"
            android:text="User"
            android:id="@+id/email_btn" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_btn"
            android:text="Update"
            android:id="@+id/update_btn_email"
            android:layout_marginRight="8dp"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_btn_email"
            android:text="Delete"
            android:id="@+id/delete_btn_email"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_btn_email"
            android:text="Enviar Email"
            android:id="@+id/enviarEmail_btn_email"
            />

    </RelativeLayout>
</ScrollView>