<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_guardioes_id"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="id"/>

        <EditText
            android:id="@+id/et_guardioes_nome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Nome"/>
        <EditText
            android:id="@+id/et_guardioes_sobrenome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_nome"
            android:layout_marginTop="8dp"
            android:hint="Sobrenome"/>
        <EditText
            android:id="@+id/et_guardioes_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_sobrenome"
            android:layout_marginTop="8dp"
            android:hint="Email"/>
        <EditText
            android:id="@+id/et_guardioes_cidade"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_email"
            android:layout_marginTop="8dp"
            android:hint="Cidade"/>
        <EditText
            android:id="@+id/et_guardioes_uf"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_cidade"
            android:layout_marginTop="8dp"
            android:hint="UF"/>
        <EditText
            android:id="@+id/et_guardioes_sexo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_uf"
            android:layout_marginTop="8dp"
            android:hint="Gênero"/>
        <EditText
            android:id="@+id/et_guardioes_nascimento"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_sexo"
            android:layout_marginTop="8dp"
            android:hint="Nascimento"/>
        <EditText
            android:id="@+id/et_guardioes_numero_celular"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_nascimento"
            android:layout_marginTop="8dp"
            android:hint="Número"/>
        <EditText
            android:id="@+id/et_guardioes_operadora"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_numero_celular"
            android:layout_marginTop="8dp"
            android:hint="Operadora"/>
        <EditText
            android:id="@+id/et_guardioes_nacionalidade"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_operadora"
            android:layout_marginTop="8dp"
            android:hint="Nacionalidade"/>
        <EditText
            android:id="@+id/et_guardioes_cep"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_nacionalidade"
            android:layout_marginTop="8dp"
            android:hint="CEP"/>
        <EditText
            android:id="@+id/et_guardioes_parentesco"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_cep"
            android:layout_marginTop="8dp"
            android:hint="Parentesco"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_guardioes_parentesco"
            android:text="add"
            android:id="@+id/send_btn_guardian"
            android:layout_marginTop="8dp"/>

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_btn_guardian"
            android:layout_marginTop="8dp"
            android:text="User"
            android:id="@+id/guardian_btn" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/guardian_btn"
            android:text="Update"
            android:id="@+id/update_btn_guardian"/>
        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/update_btn_guardian"
            android:text="Delete"
            android:id="@+id/delete_btn_guardian"
            />

    </RelativeLayout>
</ScrollView>