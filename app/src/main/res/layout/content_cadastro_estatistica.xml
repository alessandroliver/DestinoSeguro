<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_es_n_alerta"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Numero Alerta"/>
    <EditText
        android:id="@+id/et_es_pmulheres"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et_es_n_alerta"
        android:layout_marginTop="50dp"
        android:hint="% mulheres"/>
    <EditText
        android:id="@+id/et_es_phomens"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_n_alerta"
        android:layout_marginTop="8dp"
        android:hint="% homens">
    </EditText>
    <EditText
        android:id="@+id/et_es_nBos"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_n_alerta"
        android:layout_toRightOf="@+id/et_es_phomens"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Número BOs"/>
    <EditText
        android:id="@+id/et_es_cidade"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_nBos"
        android:layout_marginTop="8dp"
        android:hint="Cidade de mais alertas"/>
    <EditText
        android:id="@+id/et_es_bairro"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_nBos"
        android:layout_toRightOf="@+id/et_es_cidade"
        android:layout_marginTop="8dp"
        android:hint="Cidade de mais alertas"/>

    <EditText
        android:id="@+id/et_es_horaMais"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_cidade"
        android:layout_marginTop="8dp"
        android:hint="Hora Mais Alerta"/>
    <EditText
        android:id="@+id/et_es_horaMenos"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_cidade"
        android:layout_toRightOf="@+id/et_es_horaMais"
        android:layout_marginTop="8dp"
        android:hint="Hora Menos Alerta"/>

    <EditText
        android:id="@+id/et_es_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_horaMenos"
        android:layout_marginTop="8dp"
        android:hint="Data Mais Alerta"/>

    <EditText
        android:id="@+id/et_es_modo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_horaMais"
        android:layout_toRightOf="@+id/et_es_data"
        android:layout_marginTop="8dp"
        android:hint="Modo"/>

    <Button
        android:id="@+id/bt_es_enviar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_es_modo"
        android:layout_marginTop="8dp"
        android:text="Enviar Estatísticas"/>


</RelativeLayout>