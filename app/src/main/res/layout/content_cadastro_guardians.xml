<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_guardian_nome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Nome"/>
    <EditText
        android:id="@+id/et_guardian_sobrenome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_nome"
        android:layout_marginTop="8dp"
        android:hint="Sobrenome"/>
    <EditText
        android:id="@+id/et_guardian_email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_sobrenome"
        android:layout_marginTop="8dp"
        android:hint="Email"/>
    <EditText
        android:id="@+id/et_guardian_cidade"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_email"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Cidade"/>
    <EditText
        android:id="@+id/et_guardian_uf"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_email"
        android:layout_toRightOf="@id/et_guardian_cidade"
        android:layout_marginTop="8dp"
        android:hint="UF"/>
    <EditText
        android:id="@+id/et_guardian_nacionalidade"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_uf"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:hint="Nacionalidade"/>

    <EditText
        android:id="@+id/et_guardian_cep"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_uf"
        android:layout_toRightOf="@+id/et_guardian_nacionalidade"
        android:layout_marginTop="8dp"
        android:hint="CEP"/>
    <EditText
        android:id="@+id/et_guardian_nascimento"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_cep"
        android:layout_marginTop="8dp"
        android:hint="Data Nascimento"/>

    <EditText
        android:id="@+id/et_guardian_sexo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_cep"
        android:layout_toRightOf="@+id/et_guardian_nascimento"
        android:layout_marginTop="8dp"
        android:hint="GÃªnero"/>
    <EditText
        android:id="@+id/et_guardian_celular"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_nascimento"
        android:layout_marginTop="8dp"
        android:hint="Numero do celular"/>

    <EditText
        android:id="@+id/et_guardian_operadora"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_nascimento"
        android:layout_toRightOf="@+id/et_guardian_celular"
        android:layout_marginTop="8dp"
        android:hint="Operadora"/>

    <CheckBox
        android:id="@+id/et_guardian_receber_sms"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_celular"
        android:layout_marginTop="8dp"
        android:hint="Recebe SMS"/>
    <Button
        android:id="@+id/bt_guardian_cadastro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_guardian_receber_sms"
        android:layout_marginTop="8dp"
        android:text="Cadastrar"/>


</RelativeLayout>