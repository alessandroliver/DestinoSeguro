<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_rt_destino"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Destino"/>
    <EditText
        android:id="@+id/et_rt_cidade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_destino"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Cidade"/>
    <EditText
        android:id="@+id/et_rt_uf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_destino"
        android:layout_toRightOf="@+id/et_rt_cidade"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="UF"/>

    <EditText
        android:id="@+id/et_rt_cep"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_cidade"
        android:layout_marginTop="8dp"
        android:hint="CEP"/>

    <EditText
        android:id="@+id/et_rt_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_cidade"
        android:layout_toRightOf="@id/et_rt_cep"
        android:layout_marginTop="8dp"
        android:hint="E-mail"/>

    <EditText
        android:id="@+id/et_rt_mDestino"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_cep"
        android:layout_marginTop="8dp"
        android:hint="Metros do Destino"/>

    <EditText
        android:id="@+id/et_rt_mRota"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_cep"
        android:layout_toRightOf="@+id/et_rt_mDestino"
        android:layout_marginTop="8dp"
        android:hint="Metros da Rota"/>
    <EditText
        android:id="@+id/et_rt_modo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_mDestino"
        android:layout_marginTop="8dp"
        android:hint="Modo"/>

    <EditText
        android:id="@+id/et_rt_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_mDestino"
        android:layout_toRightOf="@+id/et_rt_modo"
        android:layout_marginTop="8dp"
        android:hint="Data de cadastro"/>


    <Button
        android:id="@+id/bt_rt_cadastrar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_rt_modo"
        android:layout_marginTop="8dp"
        android:text="Cadastrar"/>


</RelativeLayout>