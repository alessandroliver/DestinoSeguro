<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_bo_tipo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Tipo Ocorrência"/>
    <EditText
        android:id="@+id/et_bo_cep"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/et_bo_tipo"
        android:layout_marginTop="50dp"
        android:hint="CEP"/>
    <EditText
        android:id="@+id/et_bo_cidade"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_tipo"
        android:layout_marginTop="8dp"
        android:hint="Cidade"/>
    <EditText
        android:id="@+id/et_bo_uf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_tipo"
        android:layout_toRightOf="@+id/et_bo_cidade"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="UF"/>
    <EditText
        android:id="@+id/et_bo_rua"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_uf"
        android:layout_marginTop="8dp"
        android:hint="Rua"/>

    <EditText
        android:id="@+id/et_bo_data"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_rua"
        android:layout_marginTop="8dp"
        android:hint="Data Ocorrido"/>
    <EditText
        android:id="@+id/et_bo_qtdRoubadas"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_rua"
        android:layout_toRightOf="@+id/et_bo_data"
        android:layout_marginTop="8dp"
        android:hint="Coisas Roubadas"/>

    <EditText
        android:id="@+id/et_bo_horario"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_data"
        android:layout_marginTop="8dp"
        android:hint="Horário"/>

    <EditText
        android:id="@+id/et_user_cpf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_data"
        android:layout_toRightOf="@+id/et_bo_horario"
        android:layout_marginTop="8dp"
        android:hint="CPF"/>

    <EditText
        android:id="@+id/et_bo_senha"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_horario"
        android:layout_marginTop="8dp"
        android:hint="Senha"/>
    <EditText
        android:id="@+id/et_bo_descricao"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_below="@+id/et_bo_senha"
        android:layout_marginTop="8dp"
        android:hint="Descrição do ocorrido"/>

    <Button
        android:id="@+id/bt_bo_enviar"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bo_descricao"
        android:layout_marginTop="8dp"
        android:text="Cadastrar"/>


</RelativeLayout>