<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_user_nome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Nome"/>
    <EditText
        android:id="@+id/et_user_sobrenome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_nome"
        android:layout_marginTop="8dp"
        android:hint="Sobrenome"/>
    <EditText
        android:id="@+id/et_user_email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_sobrenome"
        android:layout_marginTop="8dp"
        android:hint="Email"/>
    <EditText
        android:id="@+id/et_user_cidade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_email"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Cidade"/>
    <EditText
        android:id="@+id/et_user_uf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_email"
        android:layout_toRightOf="@id/et_user_cidade"
        android:layout_marginTop="8dp"
        android:hint="UF"/>
    <EditText
        android:id="@+id/et_user_nacionalidade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_uf"
        android:inputType="textPassword"
        android:layout_marginTop="8dp"
        android:hint="Nacionalidade"/>

    <EditText
        android:id="@+id/et_user_cep"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_uf"
        android:layout_toRightOf="@+id/et_user_nacionalidade"
        android:layout_marginTop="8dp"
        android:hint="CEP"/>
    <EditText
        android:id="@+id/et_user_nascimento"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_nacionalidade"
        android:layout_marginTop="8dp"
        android:hint="Data Nascimento"/>

    <EditText
        android:id="@+id/et_user_sexo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_nacionalidade"
        android:layout_toRightOf="@+id/et_user_nascimento"
        android:layout_marginTop="8dp"
        android:hint="GÃªnero"/>
    <EditText
        android:id="@+id/et_user_celular"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_nascimento"
        android:layout_marginTop="8dp"
        android:hint="Numero do celular"/>

    <EditText
        android:id="@+id/et_user_operadora"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_nascimento"
        android:layout_toRightOf="@+id/et_user_celular"
        android:layout_marginTop="8dp"
        android:hint="Operadora"/>

    <EditText
        android:id="@+id/et_user_cpf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_celular"
        android:layout_marginTop="8dp"
        android:hint="CPF"/>

    <EditText
        android:id="@+id/et_user_senha"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_celular"
        android:layout_toRightOf="@+id/et_user_cpf"
        android:layout_marginTop="8dp"
        android:hint="Senha"/>

    <Button
        android:id="@+id/bt_user_cadastro"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_user_senha"
        android:layout_marginTop="8dp"
        android:text="Cadastrar"/>


</RelativeLayout>